<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 1. Color de fondo del item.
         Usa un color oscuro que combine con tu diseño.
         #1C2333 es un azul muy oscuro, puedes cambiarlo. -->
    <solid android:color="#1C2333" />

    <!-- 2. Contorno blanco. -->
    <stroke
        android:width="1dp"
        android:color="@android:color/white" />

    <!-- 3. (Opcional) Esquinas redondeadas para un look más suave. -->
    <corners android:radius="8dp" />

</shape>
